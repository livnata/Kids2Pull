<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kids2pull.android.activities.EventDetails"
    tools:showIn="@layout/activity_event_details">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/ic_kids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/ic_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/ic_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery" />
    </android.support.v7.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="Ballet"
        android:layout_below="@id/images" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/DateAndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/eventName"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/SetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_time"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"

            android:onClick="showTimePickerDialog"
            android:layout_below="@+id/eventName" />

        <Button
            android:id="@+id/SetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/pick_date"
            android:onClick="showDatePickerDialog" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/LocationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DateAndTime"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:text="@string/address" />


        <EditText
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:text="@string/notification_detail" />
        <android.support.v7.widget.SwitchCompat
            android:text="Repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:id="@+id/toggleButton"
            android:switchMinWidth="14sp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="36dp"
            android:textOn="@string/repit_event"
            android:textOff="@string/repit_event_off" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pick_and_drop"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/PickUpButton"
                android:layout_width="32dp"
                android:layout_height="50dp"
                android:src="@drawable/oval_76_copy_2"
                android:layout_marginLeft="40dp"
                android:text="@string/pick_up_button"/>
            <ImageView
                android:id="@+id/DropOffButton"
                android:layout_width="32dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/oval_76_copy"
                android:text="@string/drop_off_button"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/full_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
